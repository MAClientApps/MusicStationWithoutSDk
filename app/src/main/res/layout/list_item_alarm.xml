<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:fontFamily="@font/heebo_regular"
            android:textColor="@color/lightText"
            android:layout_marginRight="15dp"
            android:textSize="16sp" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:switchMinWidth="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:height="20dp"
            android:thumb="@drawable/switch_thumb"
             android:buttonTint="@color/appPink"
            android:text=""
            android:textSize="20sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/heebo_bold"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonDeleteAlarm"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:srcCompat="@drawable/delete_round"
            />
        <ImageView
            android:id="@+id/checkboxRepeating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_refresh_black_24dp"
           />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeatDaysView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

    </LinearLayout>



</LinearLayout>
