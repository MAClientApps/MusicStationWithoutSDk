<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/folder_relative_layout"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_list_item"
        android:paddingTop="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/_12sdp">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_13sdp"
            android:src="@drawable/playsmallnew" />

        <com.lakshitasuman.musicstation.musicplayer.HeeboRegular
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/imgView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:text="@string/none"
            android:textColor="@color/ofWhite"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>
</RelativeLayout>





